  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/dot-editorconfig.git"
  },
  "keywords": [
    "editorconfig",
    "editor",
    "config",
    "helper"
  ],
  "bugs": {
    "url": "https://github.com/fibo/dot-editorconfig/issues"
  },
  "scripts": {
    "copy_editorconfig": "node postinstall.js copy .editorconfig",
